<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="form-group mb-4">
        <label for="title" class="form-label">Title</label>
        <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control form-control-lg">
      </div>
      <div class="form-group mb-4">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" id="description" class="form-control" rows="3"><%= article.description %></textarea>
      </div>
      <div class="form-group mb-4">
        <label for="markdown" class="form-label">Markdown</label>
        <textarea required name="markdown" id="markdown" class="form-control" rows="10"><%= article.markdown %></textarea>
      </div>

      <div class="d-flex justify-content-between">
        <a href="/" class="btn btn-secondary btn-lg">Cancel</a>
        <button type="submit" class="btn btn-primary btn-lg">Save</button>
      </div>
    </div>
  </div>
</div>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .form-group label {
    text-align: left;
    display: block;
  }
  
  .form-control {
    width: 100%;
  }
  
  .d-flex {
    margin-top: 20px;
  }
</style>
